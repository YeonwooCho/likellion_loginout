<h1>회원가입</h1>
<p>Find me in app/views/users/new.html.erb</p>
<%= form_for @user do |f| %>
    E-mail <br><%= f.email_field :email %><br>
    Password <br> <%= f.password_field :password %><br>
    Password Confirmation <br> <%= f.password_field :password_confirmation %><br><br>
    <%= f.submit '회원가입하기' %>
<% end %>